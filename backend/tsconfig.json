{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "types": ["node", "jest"],
    "moduleResolution": "node"
  },
  "include": [
   "src/**/*.ts",             // 実装ファイル
   "src/**/*.spec.ts",        // src 配下の spec
   "test/**/*.spec.ts"        // （もし test フォルダも使うなら）
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
